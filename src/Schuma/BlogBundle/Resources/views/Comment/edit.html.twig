{% extends "SchumaBlogBundle::layout.html.twig" %}

{% block section_body %}

    <div class="page-header">
        <h2>Modifier un commentaire</h2>
    </div>

    {{ form_start(form, {'attr':{'class': 'form-horizontal well'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.body, 'Message : ', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.body) }}
            <div class="col-sm-10">
                {{ form_widget(form.body, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>


        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok-sign"></span> Modifier</button>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}
