{% extends "SchumaBlogBundle::layout.html.twig" %}

{% block section_body %}
    {% if form is not null %}

        <div class="page-header">
            <h2>Ajouter un Ã©venement</h2>
        </div>


        {{ form_start(form, {'attr':{'class': 'form-horizontal well'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title, 'Titre : ', {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.title) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.object, 'Message : ', {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.object) }}
                <div class="col-sm-10">
                    {{ form_widget(form.object, {'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.place, 'Lieu : ', {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.place) }}
                <div class="col-sm-10">
                    {{ form_widget(form.place, {'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.date.date, 'Date : ', {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.date.date) }}
                <div class="">
                    {{ form_widget(form.date.date.year, {'attr':{'class': 'selectpicker col-sm-2 show-tick'}}) }}
                    {{ form_widget(form.date.date.month, {'attr':{'class': 'selectpicker col-sm-2 show-tick'}}) }}
                    {{ form_widget(form.date.date.day, {'attr':{'class': 'selectpicker col-sm-2 show-tick'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.date.time, 'Heure : ', {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                <div class="">
                    {{ form_widget(form.date.time.hour, {'attr':{'class': 'selectpicker col-sm-2 show-tick'}}) }}
                    {{ form_widget(form.date.time.minute, {'attr':{'class': 'selectpicker col-sm-2 show-tick'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok-sign"></span> Ajouter</button>
                </div>
            </div>

        {{ form_end(form) }}

    {% endif %}
{% endblock %}
