{% extends "SchumaBlogBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bbcode/themes/office-toolbar.min.css') }}" type="text/css">
{% endblock %}


{% block section_body %}

    <div class="page-header">
        <h2>Ajouter un article</h2>
    </div>

    {{ form_start(form, {'attr':{'class': 'form-horizontal well'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.title, 'Titre : ', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.title) }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.resume, 'Résumé : ', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.resume) }}
            <div class="col-sm-10">
                {{ form_widget(form.resume, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.body, 'Texte : ', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.body) }}
            <div class="col-sm-10">
                {{ form_widget(form.body, {'attr':{'class': 'form-control bb-editor'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok-sign"></span> Envoyer</button>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bbcode/jquery.sceditor.bbcode.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/includeAndConfigScEditor.js') }}"></script>
{% endblock %}
