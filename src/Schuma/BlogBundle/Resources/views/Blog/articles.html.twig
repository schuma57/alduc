{# src/Schuma/BlogBundle/Resources/views/Blog/articles.html.twig #}

{% extends "SchumaBlogBundle::layout.html.twig" %}


{% block section_body %}
<div class="row">
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('schuma_blog_ajouter') }}">
            <span class="glyphicon glyphicon-plus"></span> Ajouter un article </a>
    {% endif %}

    <div class="page-header">
        <h2>L'actualit√©</h2>
    </div>

    <div class="col-xs-12">
    {% for item in list %}

        <a class="path_article" href="{{ path('schuma_blog_voirArticle', {'id' : item.id}) }}">
        <div class="panel panel-default">

            <div class="panel-heading">

                    <h2 class="panel-title">{{ item.title }} <small>{{ item.date|date('d/m/Y') }}</small> </h2>
            </div>
            <div class="panel-body">
            {{ item.resume }}
            </div>
        </div>
        </a>
    {% endfor %}
    </div>

</div>
{% endblock %} 
