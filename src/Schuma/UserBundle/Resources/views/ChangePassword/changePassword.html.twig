{% extends "SchumaUserBundle::layout.html.twig" %}

{% block fos_user_title %}
    <h2>Changer son mot de passe</h2>
{% endblock %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }}
          method="POST" class="fos_user_change_password form-horizontal">
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.current_password, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.current_password) }}
            <div class="col-sm-10">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.plainPassword.first) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.plainPassword.second) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-success" />
            </div>
        </div>
    </form>
{% endblock %}
