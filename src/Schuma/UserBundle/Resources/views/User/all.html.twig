{% extends "SchumaUserBundle::layout.html.twig" %}

{% block fos_user_title %}
    <h2>Liste Utilisateurs</h2>
{% endblock %}


{% block fos_user_content %}
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Gestion</th>
            </tr>
        </thead>

        <tbody>
            {% for user in list %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a>promote</a>
                        <a>demote</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
