{% extends "SchumaUserBundle::layout.html.twig" %}

{% block fos_user_title %}
    <h2>Modifier son profile</h2>
{% endblock %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }}
          method="POST" class="fos_user_profile_edit form-horizontal">
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.username, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.username) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.email) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.current_password, '', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.current_password) }}
            <div class="col-sm-10">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-success" />
            </div>
        </div>
    </form>
{% endblock %}
