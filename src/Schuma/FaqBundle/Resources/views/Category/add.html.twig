{% extends "SchumaFaqBundle::layout.html.twig" %}

{% block title_faq %}{{ parent() }} <small>- Ajouter une cat√©gorie</small> {% endblock %}

{% block section_body %}
    {% if form is not null %}

    {{ form_start(form, {'attr':{'class': 'form-horizontal well'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.name, 'Nom', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok-sign"></span> Ajouter</button>
            </div>
        </div>
    {{ form_end(form) }}

    {% endif %}
{% endblock %}
