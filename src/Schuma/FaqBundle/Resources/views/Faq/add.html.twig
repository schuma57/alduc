{% extends "SchumaFaqBundle::layout.html.twig" %}

{% block title_faq %}{{ parent() }} <small>- Ajouter une question</small> {% endblock %}

{% block section_body %}
    {% if form is not null %}

    {{ form_start(form, {'attr':{'class': 'form-horizontal well'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.category, 'Catégorie', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.category) }}
            <div class="col-sm-10">
                {{ form_widget(form.category, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.title, 'Titre', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.title) }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.text, 'Texte', {'label_attr':{'class': 'control-label col-sm-2'}}) }}
            {{ form_errors(form.text) }}
            <div class="col-sm-10">
                {{ form_widget(form.text, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok-sign"></span> Ajouter</button>
            </div>
        </div>
    {{ form_end(form) }}

        <!-- modal -->
        <div class="modal fade" id="new_category" role="dialog" aria-labelledby="new_category-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="new_category-label">Ajouter nouvelle catégorie</h4>
                    </div>
                    <div class="modal-body">
                        {{ render(controller('SchumaFaqBundle:Category:newCategoryFromAjax')) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Fermer</button>
                        <button type="button" class="btn btn-primary" id="save_category">Ajouter</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    {% endif %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/newCategoryAjax.js') }}"></script>
{% endblock %}
